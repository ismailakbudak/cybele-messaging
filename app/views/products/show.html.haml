- content_for :toolbar do
  = link_to edit_product_path(@product ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Product.model_name.human)
  .panel-body
    = show_for @product do |s|
      = s.attribute :name
      = s.attribute :description
      = s.attribute :price
